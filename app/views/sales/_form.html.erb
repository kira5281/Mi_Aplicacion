<%= form_for(sale) do |f| %>
  <% if sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :Asesor %>
    <%= f.select :adviser_id, Adviser.all.collect { |p| [ p.name, p.id ] }, {include_blank: "Seleccionar asesor..."}, { :class => 'form-control' } %>
  </div>

  <div class="field form-group">
    <%= f.label :Nombre_venta %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :Precio_venta %>
    <%= f.text_field :cant, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "enviar", class: 'btn btn-primary' %>
  </div>
<% end %>
