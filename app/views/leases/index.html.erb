<p id="notice"><%= notice %></p>

<h1>Arrendamientos</h1>

<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Asesor</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Creado por</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @leases.each do |lease| %>
        <tr>
          <td><%= lease.adviser.name %></td>
          <td><%= lease.name %></td>
          <td><%= lease.cant %></td>
          <td><%= lease.user.email if lease.user %></td>
          <td><%= link_to 'Ver', lease, class: 'btn btn-info btn-xs' %></td>
          <% if lease.user == current_user %>
            <td><%= link_to 'Editar', edit_lease_path(lease), class: 'btn btn-warning btn-xs' %></td>
            <td><%= link_to 'Eliminar', lease, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Estas seguro?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<% if user_signed_in? %>
  <%= link_to 'Nuevo Arrendamiento', new_lease_path, class: 'btn btn-primary' %>
<% end %>
