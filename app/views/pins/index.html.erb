<p id="notice"><%= notice %></p>

<h1>Pins</h1>

<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Description</th>
        <th>User</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @pins.each do |pin| %>
        <tr>
          <td><%= pin.description %></td>
          <td><%= pin.user.email if pin.user %></td>
          <td><%= link_to 'Ver', pin, class: 'btn btn-info btn-xs' %></td>
          <% if pin.user == current_user %>
            <td><%= link_to 'Editar', edit_pin_path(pin), class: 'btn btn-warning btn-xs' %></td>
            <td><%= link_to 'Eliminar', pin, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Estas seguro?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<% if user_signed_in? %>
  <%= link_to 'Nuevo Pin', new_pin_path, class: 'btn btn-primary' %>
<% end %>
